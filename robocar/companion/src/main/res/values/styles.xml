<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:imageButtonStyle">@style/Widget.ImageButton</item>
        <item name="imageButtonStyle">@style/Widget.ImageButton</item>
    </style>

    <style name="Widget.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:stateListAnimator">@animator/button_state_list_anim_material</item>
    </style>

    <style name="ImageButton.CarControl" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:tint">@color/car_control_button</item>
    </style>
</resources>
